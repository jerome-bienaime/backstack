# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[Makefile]
indent_style = tab

[*.md]
indent_style = space
indent_size = 2

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false